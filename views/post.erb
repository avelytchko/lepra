<p><%= @row['content'] %></p>
<p>Добавлено <%= @row['created_date'] %></p>
<p>Комментарии:</p>
<% @results_comments.each do |rescom|%>
<div class="panel panel-default">
<div class="panel-heading"><%= rescom['created_date'] %></div>
  <div class="panel-body">
    <%= rescom['comment'] %>
  </div>
</div>
<% end %>

<form action="/post/<%= @row['id'] %>" method="POST" role="form">
  <div class="form-group">
    <textarea name="comment" class="form-control" rows="6" placeholder="Написать комментарий"></textarea>
  </div>
  <button type="submit" class="btn btn-default">Добавить комментарий</button>
</form>
